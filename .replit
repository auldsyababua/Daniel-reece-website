modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Hugo Server"
author = 40860523
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx hugo --minify"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m http.server 5000 --directory ./public"

[[workflows.workflow]]
name = "Hugo Server"
author = "agent"
mode = "sequential"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd public && python -m http.server 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hugo Server"

[deployment]
run = ["sh", "-c", "cd public && python -m http.server 5000"]
build = ["sh", "-c", "hugo --minify"]

[[deployment.responseHeaders]]
path = "*.css"
name = "Cache-Control"
value = "no-cache, no-store, must-revalidate"

[[deployment.responseHeaders]]
path = "/css/*"
name = "Cache-Control" 
value = "no-cache, no-store, must-revalidate"

[[ports]]
localPort = 5000
externalPort = 80
