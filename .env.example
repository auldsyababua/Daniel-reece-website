# Executive Speech Coaching NYC - Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ====================
# AIRTABLE
# ====================
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_base_id_here
AIRTABLE_CLIENTS_TABLE=Clients
AIRTABLE_SESSIONS_TABLE=Sessions
AIRTABLE_LEADS_TABLE=Leads

# ====================
# STRIPE
# ====================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_SESSION=price_your_single_session_price_id
STRIPE_PRICE_LAUNCH=price_your_launch_package_id
STRIPE_PRICE_SCALE=price_your_scale_package_id
STRIPE_PRICE_STARTUP=price_your_startup_team_package_id
STRIPE_PRICE_VENTURE=price_your_venture_team_package_id
STRIPE_PRICE_ENTERPRISE=price_your_enterprise_team_package_id

# ====================
# GOOGLE WORKSPACE
# ====================
# If you can get these working:
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_refresh_token
GOOGLE_CALENDAR_ID=your_calendar_id_or_primary

# Alternative calendar solutions:
CAL_COM_API_KEY=your_cal_com_api_key_if_using

# ====================
# N8N AUTOMATION
# ====================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/
N8N_API_KEY=your_n8n_api_key_if_needed
N8N_CONTACT_WEBHOOK=https://your-n8n-instance.com/webhook/contact-form
N8N_BOOKING_WEBHOOK=https://your-n8n-instance.com/webhook/booking-created
N8N_PAYMENT_WEBHOOK=https://your-n8n-instance.com/webhook/payment-received

# ====================
# EMAIL SETTINGS
# ====================
# For sending transactional emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM="Daniel Reece <daniel@executivespeechcoachingnyc.com>"

# Notification recipients
ADMIN_EMAIL=daniel@executivespeechcoachingnyc.com
ADMIN_SMS=+19173009337

# ====================
# SITE CONFIGURATION
# ====================
SITE_URL=https://executivespeechcoachingnyc.com
SITE_NAME="Executive Speech Coaching NYC"

# ====================
# ANALYTICS & TRACKING
# ====================
GOOGLE_ANALYTICS_ID=G-YOUR_MEASUREMENT_ID
GOOGLE_TAG_MANAGER_ID=GTM-YOUR_ID

# ====================
# API KEYS FOR SERVICES
# ====================
# For future integrations
YOUTUBE_API_KEY=your_youtube_api_key_if_needed
VIMEO_API_KEY=your_vimeo_api_key_if_needed

# ====================
# DEVELOPMENT
# ====================
NODE_ENV=development
DEBUG=false

# ====================
# NETLIFY SPECIFIC
# ====================
# These are automatically set by Netlify, included here for reference
# NETLIFY=true
# NETLIFY_ENV=production
# CONTEXT=production
# DEPLOY_URL=https://your-site.netlify.app